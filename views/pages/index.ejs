    <head>
        <!-- head -->
        <% include ../partials/head %>
        
    </head>
    <body>
        <!--[if lt IE 7]>
            <p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="#">upgrade your browser</a> to improve your experience.</p>
        <![endif]-->
        <div class="container">
            <!-- header -->
            <% include ../partials/header %>

            <!-- main -->
            <section class="main">
                <h1>Shorten your URL address</h1>
                <form>
                    <input type="text" name="input" id="input" placeholder="e.g. http://www.google.com">
                    <!-- <input type="subbmit" id="submit_button">Shorten</input> -->
                    <div id="button" class="button">Shorten</div>
                </form>
                <p id="info">Just type or paste www address and click the Shorten button to get your own URL shortcut, easy to use over the phone when talking to clients.  </p>  
            </section>

            <!-- footer -->
            <% include ../partials/footer %>

            
        </div> <!--end of main container  -->


        <script>
        
            var inputValue = document.querySelector('#input').value;
            var output = 'http://shortcutter.herokuapp.com/new/'+inputValue;
            var button = document.getElementById('button');

            button.addEventListener('click', function(){
                window.location.href = output;
            });

        </script>
        
    </body>
</html>